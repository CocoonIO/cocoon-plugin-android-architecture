<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="cocoon-plugin-android-architecture"
        version="1.1.0">

    <name>Cocoon Plugin Android Architecture</name>
    <description>This plugin allows you to build your application for arm (or x86) only</description>
    <license>MIT</license>
    <repo>https://github.com/CocoonIO/cocoon-plugin-android-architecture.git</repo>

    <engines>
        <engine name="cordova-android" version=">=5"/>
    </engines>

    <!-- android -->
    <platform name="android">
        <framework src="platforms/android/architecture.gradle" custom="true" type="gradleReference"/>
    </platform>
</plugin>
